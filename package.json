{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "kolkuler",
  "description": "Organizador pessoal com ferramentas matem√°ticas integradas",
  "author": "Giulio Maciotta <gmaciotta@gmail.com>",
  "private": true,
  "version": "1.0.1",
  "main": "src-electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:5173 && electron .\"",
    "build-electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "build": {
    "appId": "com.kolkuler.app",
    "productName": "Kolkuler",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src-electron/main.js",
      "package.json"
    ],
    "win": {
      "target": "dir"
    }
  },
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "concurrently": "^9.1.2",
    "electron-is-dev": "^3.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.1",
    "styled-components": "^6.1.18"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/node": "^22.15.29",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.2",
    "@types/styled-components": "^5.1.34",
    "@vitejs/plugin-react": "^4.4.1",
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "wait-on": "^8.0.1"
  }
}
